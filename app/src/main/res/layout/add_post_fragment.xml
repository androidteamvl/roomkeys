<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:id="@+id/as"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_black_24dp" />
            <TextView
                android:layout_toEndOf="@+id/back"
                android:drawablePadding="12dp"
                android:id="@+id/mylocation"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_bold"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Post" />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#3EADADAD">
    </View>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_below="@+id/view"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginBottom="85dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/carlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/card1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="33dp"
                        android:layout_marginEnd="33dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/gilroy_bold"
                            android:textSize="15dp"
                            android:layout_marginStart="12dp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Title" />
                        <EditText
                            android:layout_marginTop="12dp"
                            android:id="@+id/edtnumdisplay"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/text13"
                            android:background="@drawable/edtback"
                            android:drawableLeft="@drawable/phone"
                            android:drawableTint="@color/grey"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:hint="Title"
                            android:textColorHint="@color/grey"
                            android:inputType="textCapWords"
                            android:paddingStart="12dp"
                            android:paddingEnd="38dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp">
                        </EditText>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/gilroy_bold"
                            android:textSize="15dp"
                            android:layout_marginStart="12dp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Price" />

                        <EditText
                            android:id="@+id/edtpassforcreate"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="12dp"
                            android:layout_below="@+id/edtnumdisplay"
                            android:background="@drawable/edtback"
                            android:drawableLeft="@drawable/rupeelayer"
                            android:drawableTint="@color/grey"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:hint="Price"
                            android:textColorHint="@color/grey"
                            android:inputType="number"
                            android:paddingStart="12dp"
                            android:paddingEnd="38dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp">
                        </EditText>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/gilroy_bold"
                            android:textSize="15dp"
                            android:layout_marginStart="12dp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Description" />
                        <EditText
                            android:layout_marginTop="12dp"
                            android:id="@+id/edtconpassforcreate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edtpassforcreate"
                            android:background="@drawable/edtback"
                            android:drawableLeft="@drawable/ic_menu_black_24dp"
                            android:drawableTint="@color/grey"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:hint="Description"
                            android:minHeight="45dp"
                            android:imeOptions="actionNone"
                            android:textColorHint="@color/grey"
                            android:inputType="textCapWords|textMultiLine"
                            android:paddingStart="12dp"
                            android:paddingEnd="38dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp">
                        </EditText>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/gilroy_bold"
                            android:textSize="15dp"
                            android:layout_marginStart="12dp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Role" />
                        <LinearLayout
                            android:weightSum="2"
                            android:id="@+id/role"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/tiaq3"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/owner"
                                android:text="Owner"
                                android:background="@drawable/radiouncheck"
                                android:fontFamily="@font/gilroy_medium"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>
                            <View
                                android:background="#C2C2C2"
                                android:layout_width="0.7dp"
                                android:layout_height="match_parent">
                            </View>
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/broker"
                                android:text="Broker"
                                android:background="@drawable/radiouncheck"
                                android:fontFamily="@font/gilroy_medium"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:visibility="gone"
                    android:elevation="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="33dp"
                    android:background="@drawable/layborder"
                    android:layout_below="@+id/bolo"
                    android:id="@+id/abn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="12dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Details" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/carlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:visibility="gone"
                    android:elevation="12dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="33dp"
                    android:background="@drawable/layborder"
                    android:layout_below="@+id/bolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="12dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="15dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Details" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="33dp"
                        android:layout_marginBottom="35dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/gilroy_bold"
                            android:text="Name"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/text13"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/edtback"
                            android:drawableLeft="@drawable/account"
                            android:drawableTint="@color/grey"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:hint="Title"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingStart="12dp"
                            android:paddingEnd="38dp"
                            android:text="Prateek"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="15dp"></EditText>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/gilroy_bold"
                            android:text="Number"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/edtnumdisplay"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/edtback"
                            android:drawableLeft="@drawable/phone"
                            android:drawableTint="@color/grey"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingStart="12dp"
                            android:paddingEnd="38dp"
                            android:text="9024957622"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="15dp"></EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabaddpost"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>