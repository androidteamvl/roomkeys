<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">


        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/wehavesent"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/lay1"
        android:id="@+id/laymain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/text"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edtback"
                android:drawableLeft="@drawable/account"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:hint="Enter Name"
                android:inputType="number"
                android:maxLength="10"
                android:drawableTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:paddingStart="12dp"
                android:paddingEnd="38dp"
                android:textAlignment="center"
                android:textSize="15dp">
            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/edtuni"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/edtname"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edtback"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:hint="Enter University"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="12dp"
                android:paddingEnd="38dp"
                android:drawableTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:textAlignment="center"
                android:textSize="15dp">
            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/edtroll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/edtuni"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edtback"
                android:drawableLeft="@drawable/rollno"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:hint="Enter Roll No."
                android:drawableTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="12dp"
                android:paddingEnd="38dp"
                android:textAlignment="center"
                android:textSize="15dp">
            </EditText>


        </RelativeLayout>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/tvquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtpin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/text"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edtback"
                android:drawableLeft="@drawable/pin"
                android:drawableTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:hint="Enter 6 digit code"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="12dp"
                android:paddingEnd="38dp"
                android:textAlignment="center"
                android:textSize="15dp">
            </EditText>

            <TextView
                android:layout_below="@+id/edtpin"
                android:layout_marginTop="25dp"
                android:id="@+id/resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/gilroy_medium"
                android:text="Resend"
                android:textColor="@color/red"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/laymain"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">



        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/btnborder"
                android:fontFamily="@font/gilroy_bold"
                android:text="Back"
                android:textColor="@android:color/black">
            </Button>
            <Button
                android:layout_weight="1"
                android:id="@+id/next"
                android:layout_marginStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/btnback"
                android:fontFamily="@font/gilroy_bold"
                android:text="Next"
                android:textColor="@android:color/white">
            </Button>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>